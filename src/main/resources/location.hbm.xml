<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="Location.Location" table="location">
        <id name="id" column="id" type="long">
            <generator class="native"/>
        </id>
        <property name="lat"            column="lat"            type="string" not-null="true"/>
        <property name="lng"            column="lng"            type="string" not-null="true"/>
        <property name="product_id"     column="product_id"     type="string" not-null="true"/>
        <property name="store_id"       column="store_id"       type="string" not-null="true"/>
        <property name="warengruppe"    column="warengruppe"    type="string" not-null="true"/>
    </class>
</hibernate-mapping>